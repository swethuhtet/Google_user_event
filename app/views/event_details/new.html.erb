<h1>Select Users for <%= @event.name %></h1>

<%= form_with url: event_event_details_path(@event), method: :post do %>
  <div class="form-group">
    <strong>Description: </strong>
    <%= @event.description %>
  </div>

  <div class="form-group">
    <%= label_tag :user_ids, "Select Users" %>
    <%= collection_check_boxes(:user, :ids, @users, :id, :email) do |b| %>
      <div class="checkbox">
        <label>
          <%= b.check_box %> <%= b.text %>
        </label>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= submit_tag "Save", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', event_path(@event), class: "btn btn-secondary" %>

