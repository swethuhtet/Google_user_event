<h1 class="text-center mt-5">Events</h1>

<div class="container">
<%= link_to 'Users', users_path, class: "btn btn-secondary mb-3" %>
<%= link_to 'New Event', new_event_path, class: "btn btn-success mb-3" %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.description %></td>
        <td><%= event.status %></td>
        <td>
          <div class="d-inline-block">
            <%= link_to 'Show', event_path(event), class: 'btn btn-primary btn-sm mr-1' %>
          </div>
          <div class="d-inline-block">
            <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-warning btn-sm mr-1' %>
          </div>
          <div class="d-inline-block">
            <%= button_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>



