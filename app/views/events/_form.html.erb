<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5">
        <div class="card-header">
          <h3 class="card-title">Event Form</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: event, local: true, class: "form-horizontal") do |form| %>
            <div class="form-group row">
              <%= form.label :name, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :start_date, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-5">
                <%= form.date_field :start_date, class: "form-control", id: "start_date_picker" %>
              </div>
              <div class="col-sm-5">
                <%= form.time_field :start_time, class: "form-control", id: "start_time_picker" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :end_date, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-5">
                <%= form.date_field :end_date, class: "form-control", id: "end_date_picker" %>
              </div>
              <div class="col-sm-5">
                <%= form.time_field :end_time, class: "form-control", id: "end_time_picker" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :description, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_area :description, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-10 offset-sm-2">
                <%= form.submit class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
